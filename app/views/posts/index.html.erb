<h1>Listing posts</h1>

<% @posts.each do |post| %>
    <div class="post">
        <h2><%= link_to post.title, post %></h2>
        <p><%= post.body %></p>
        <%= pluralize post.comments_count, "comment" %>|
        <%= link_to 'Edit', edit_post_path(post) %>|
        <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
    </div>
<% end %>
<br />
<%= link_to 'New Post', new_post_path %>
